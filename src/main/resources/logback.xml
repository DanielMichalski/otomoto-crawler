<?xml version="1.0" encoding="UTF-8" ?>

<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="pl.dmichalski" level="INFO" />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>